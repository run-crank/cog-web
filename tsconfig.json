{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "moduleResolution": "nodenext",
      "esModuleInterop": true,
      "rootDir": "src",
      "outDir": "build",
      "sourceMap": true,
      "removeComments": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowJs": true,
      "skipLibCheck": true
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
